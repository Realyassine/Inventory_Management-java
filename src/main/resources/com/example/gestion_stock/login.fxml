<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="460.0" prefWidth="780.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <AnchorPane prefHeight="460.0" prefWidth="350.0" style="-fx-background-color: #1E1E1E;">
            <!-- Left Pane Content (if any) -->
        </AnchorPane>
    </left>
    <right>
        <AnchorPane prefHeight="460.0" prefWidth="431.0" style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER">
            <children>
                <!-- LOGIN Text -->
                <Text fill="BLACK" layoutX="160.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" text="LOGIN">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Text>

                <!-- Email TextField -->
                <TextField fx:id="emailField" layoutX="105.0" layoutY="171.0" prefHeight="38.0" prefWidth="212.0" promptText="Enter your email" />

                <!-- Password Field -->
                <PasswordField fx:id="passwordField" layoutX="105.0" layoutY="255.0" prefHeight="38.0" prefWidth="212.0" promptText="Enter your password" />

                <!-- Email Label -->
                <Text fill="BLACK" layoutX="100.0" layoutY="155.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>

                <!-- Password Label -->
                <Text fill="BLACK" layoutX="100.0" layoutY="245.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>

                <!-- Login Button -->
                <Button fx:id="loginButton" layoutX="128.0" layoutY="330.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="175.0" style="-fx-background-color: #1E1E1E;" text="Login" textFill="WHITE" />
                <Text fx:id="txtVerifieEmail" fill="BLACK" layoutX="140.0" layoutY="380.0" strokeType="OUTSIDE" strokeWidth="0.0" text="">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
            </children>
        </AnchorPane>
    </right>
</BorderPane>
